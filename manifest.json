{
  "name": "Wordle Solver",
  "description": "Plugin to suggest Wordle guesses",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/extension.html",
    "default_icon": {
      "16": "assets/wordle_extension_16x16.png",
      "32": "assets/wordle_extension_32x32.png",
      "48": "assets/wordle_extension_48x48.png",
      "128": "assets/wordle_extension_128x128.png"
    }
  },
  "icons": {
    "16": "assets/wordle_extension_16x16.png",
    "32": "assets/wordle_extension_32x32.png",
    "48": "assets/wordle_extension_48x48.png",
    "128": "assets/wordle_extension_128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/wordle_extension.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.nytimes.com/games/wordle/index.html"
  ]
}